@import "./assets/iconfont.wxss";

.container {
  position: relative; 
  top: 0; 
  left: 0; 
  width: 100%;
}
.formatEditor{
  width: 0;
  height: 0;
  position: fixed;
  z-index: -1;
  top: -100%;
}

.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
  border: 1px solid #ECECEC;
}

.ql-active {
  color: #22C704;
}

.iconfont,.color-background-picker{
  display: inline-block;
  width: 30px;  
  height: 30px;
  cursor: pointer;
  font-size: 20px;
  text-align: center;
  position: relative;
}
.color-background-picker .view{
  width: 24px;
  height: 24px;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 0;
  right: 0;
  margin: 0 auto;
  box-sizing: border-box;
  border:1px solid #aaa;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10px;
  height: 100px;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  bottom: 0;
  border: 1px solid #ECECEC;
  background: #fff;
  border-left: none;
  border-right: none;
  z-index: 1;
}
.toolbar-floor{
  display: flex;
  justify-content: space-between;
  height: 50px;
  width: 100%;
  box-sizing: border-box;
  align-items: center;
}

.color-modal{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
  background: rgba(0, 0, 0, .4);
  width: 100%;
  height: 100%;
  z-index: 5;
}

.color-content {
  position: absolute;
  left: 0;
  right: 0;
  top: 50rpx;
  margin:  0 auto;
  width: 640rpx;
  box-sizing: border-box;
  padding: 40rpx 20rpx 30rpx;
  border-radius: 20rpx;
  background: #fff;
}

.color-list{
  display: flex;
  flex-wrap: wrap;
}
.color-item{
  width: 60rpx;
  height: 60rpx;
  margin: 18rpx;
  border: 1px solid #666;
}

.custom-color{
  margin: 10rpx 0 15rpx;
  font-size: 9pt;
  color: #666;
  display: flex;
}
.custom-color-input{
  width: 250rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.custom-color-input .input{
  border: 1px solid #666;
  height: 50rpx;
  box-sizing: border-box;
  padding: 0 10rpx;
  border-radius: 5rpx;
}
.custom-color-button{
  text-align: center;
  width: 100rpx;
  height: 50rpx;
  box-sizing: border-box;
  color: #666;
  border: 1px solid #666;
  vertical-align: middle;
  border-radius: 10rpx;
}

.color-preview{
  font-size: 9pt;
  color: #666;
}
.color-preview-item{
  width: 200rpx;
  height: 60rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
  box-sizing: border-box;
  border: 1px solid #aaa;
}
.color-preview-color{
  width: 60rpx;
}

.color-cancel,.color-confirm {
  padding: 15rpx 40rpx;
  background: #aaa;
  color: #fff;
  font-size: 11pt;
  border-radius: 10rpx;
  margin: 30rpx 0 10rpx 30rpx;
}
.color-confirm{
  background: #09bb07;
}


.flex{
  display: flex;
}
.flex-shrink-1{
  flex-shrink: 1;
}
.flex-1{
  flex: 1;
}
.flex-col-center{
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.flex-between{
  display: flex;
  justify-content: space-between;
}
.flex-end{
  display: flex;
  justify-content: flex-end;
}